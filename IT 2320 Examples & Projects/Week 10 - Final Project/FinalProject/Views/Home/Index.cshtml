@model FinalProject.Models.HomeViewModel

<html>

<head>
    <link href="~/Styles/Home.css" rel="stylesheet" />
    <title>Final Project</title>
</head>

<body>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/Home.js"></script>

    <div class="output"></div>

    <div class="home">

        <h2>Create Account</h2>

        <div class="create">
            Username:           <input type="text" class="usernameCreate" />
            Password:           <input type="text" class="passwordCreate" />
            Email:              <input type="text" class="emailadrCreate" />
            Email Confirmation: <input type="text" class="emailconCreate" />
            <input type="button" class="createButton" value="Create Account" />
        </div>

        <h2>Log In</h2>

        <div class="login">
            Username: <input type="text" class="usernameLog" />
            Password: <input type="text" class="passwordLog" />
            <input type="button" class="loginButton" value="Log In" />
        </div>

    </div>

    <div class="accountInfo">

        <h2>Account Information</h2>

        <div class="account-name">
            <div class="account-name-label">Account Name: </div> 
            <div class="account-name-value"></div>
        </div>

        <div class="addUpdate">
            Account Username: <input type="text" class="getInfoTextbox" /> <input type="button" class="getInfoButton" value="Get Account Info" />
            AccountName       <br />
            ElementName   <input type="text" class="addElementName" />
            ElementValue  <input type="text" class="addElementValue" />
            <input type="button" class="addButton" value="Add" />
        </div>


    </div>


</body>

</html> 